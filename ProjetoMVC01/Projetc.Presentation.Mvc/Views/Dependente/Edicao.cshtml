@model Projetc.Presentation.Mvc.Models.DependenteEdicaoModel
@{
    ViewData["Title"] = "Edicao";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h5>Atualização de Dependente</h5>
@using (Html.BeginForm())
{
    <!-- campo oculto -->
    @Html.HiddenFor(model => model.IdDependente)

    <label>Nome do Cliente:</label>
    @Html.TextBoxFor(model => model.Nome,
    new
        {
    @class = "form-control col-md-4",
    @placeholder = "Digite aqui"
    })
    <br />
    <label>Data de nascimento:</label>
    @Html.TextBoxFor(model => model.DataNascimento,
    new
    {
        @class = "form-control col-md-4",
        @placeholder = "Digite aqui",
    })
    <br />
    <label>Selecione o Cliente:</label>
    @Html.DropDownListFor(
        model => model.IdCliente,
        Model.ListamgeDeClientes,
        "Selecione uma opção",
        new
        {
            @class = "form-control col-md-4"
        })
    <br />
    <input type="submit" class="btn btn-success"
           value="Salvar alterações" />
}